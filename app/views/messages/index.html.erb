

<%= form_for @message, html: {class: 'form-horizontal'} do |f| %>
    <% if @message.errors.present? %>
      <div class="alert alert-danger">
        <%= alert %>
        <ul>
          <% @message.errors.full_messages.each do |full_message| %>
            <li>
              <%= full_message %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
  
  <div class="form-group">
        <label for="InputName" class=" col-sm-1 control-label text-right">名前</label>
        <div class="col-sm-11">
          <%= f.text_field :name, id: "InputName", class: "form-control form_naco", placeholder: "name" %>
        </div>
    </div> <!-- form-group -->

    <div class="form-group">
        <label for="InputComment" class="col-sm-1 control-label text-right">内容</label>
        <div class="col-sm-11">
          <%= f.text_area :body, id: "InputComment", class: "form-control form_naco", cols: 10, rows: 5, placeholder: "comment"%>
        </div>
    </div> <!-- form-group -->

    <div class="form-group sub_btn">
        <div class="col-sm-12 text-center">
          <%= f.submit class: "btn btn-primary" %>
        </div>
    </div> <!-- form-group sub_btn-->
    
    <div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>
    
<% end %>
  
